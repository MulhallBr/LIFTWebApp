@model IEnumerable<LIFTWebApp.Models.Lift>

@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <p>
        <a class="btn btn-warning btn-block" asp-action="Create">Create New</a>
    </p>
    <table class="table table-hover table-dark mb-5">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateTimePerformed)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExercisePerfromed)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Weight)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Reps)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateTimePerformed)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExercisePerfromed)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Weight)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Reps)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.LiftID" class="btn btn-secondary btn-sm">Details</a> 
                        <a asp-action="Delete" asp-route-id="@item.LiftID" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
