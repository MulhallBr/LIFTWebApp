
@model LIFTWebApp.Models.ViewModels.NewLiftViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container">

    <h1>Enter a New Lift</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Lift.UserID" class="control-label"></label>
                    <input asp-for="Lift.UserID" class="form-control" />
                    <span asp-validation-for="Lift.UserID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Lift.DateTimePerformed" class="control-label"></label>
                    <input asp-for="Lift.DateTimePerformed" class="form-control" />
                    <span asp-validation-for="Lift.DateTimePerformed" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => Model.Lift.ExercisePerfromed, htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(x => Model.Lift.ExercisePerfromed, new SelectList(Model.Exercises, "ExerciseName", "ExerciseName"), htmlAttributes: new { @class = "control-label" })
                    @Html.ValidationMessageFor(x => Model.Lift.ExercisePerfromed, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label asp-for="Lift.Weight" class="control-label"></label>
                    <input asp-for="Lift.Weight" class="form-control" />
                    <span asp-validation-for="Lift.Weight" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Lift.Reps" class="control-label"></label>
                    <input asp-for="Lift.Reps" class="form-control" />
                    <span asp-validation-for="Lift.Reps" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-warning" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="logo"  style="font-size:12pt">Back to List</a>
    </div>
</div>
