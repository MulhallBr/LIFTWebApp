@{
    Layout = "_Layout";
    ViewBag.Title = "Login";
}

@model LoginViewModel


<div class="container">
    <div class="row centered-form row-fluid">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1 class="panel-title">Login</h1>
            </div>
            <div class="panel-body">
                <form role="form" method="post" asp-controller="Account" asp-action="Login">
                    <div asp-validation-summary="All"></div>

                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <div class="form-group">
                                <input asp-for="Username" class="form-control input-sm" placeholder="User Name">
                                <span asp-validation-for="Username" />
                            </div>
                        </div>

                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <div class="form-group">
                                <input asp-for="Password" class="form-control input-sm" placeholder="Password">
                                <span asp-validation-for="Password" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <div class="form-group">
                                <label asp-for="RememberMe"></label>
                                <input asp-for="RememberMe" />
                                <span asp-validation-for="RememberMe"></span>
                            </div>
                        </div>
                    </div>

                    <input type="submit" value="Login" class="btn btn-warning btn-block">

                    <br />

                    <p>If you don't have an account you can register <a asp-action="Register">here</a>!</p>

                </form>
            </div>
        </div>
    </div>
</div>
